{
"variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-2",
      "source_ami": "ami-03657b56516ab7912",     
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "prometheus_docker {{timestamp}}"
    } 
    
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./docker-compose.yml",
      "destination": "/home/ec2-user/"
    },
    {
      "type": "file",
      "source": "/Users/oyede/Documents/Devops/workspace/Week_4_Docker_proj/Docker/keys/prometheus/id_rsa.pub",
      "destination": "/home/ec2-user/.ssh/"
  },
  {
      "type": "file",
      "source": "/Users/oyede/Documents/Devops/workspace/Week_4_Docker_proj/Docker/keys/prometheus/id_rsa",
      "destination": "/home/ec2-user/.ssh/"
  },
  {
      "type": "file",
      "source": "/Users/oyede/Documents/Devops/workspace/Week_4_Docker_proj/Docker/keys/prometheus/authorized_keys",
      "destination": "/home/ec2-user/.ssh/"
  },
    {
      "type": "shell",
      "inline": ["sudo yum update -y",
        "sudo yum install docker -y",
        "sudo service docker start",
        "sudo usermod -aG docker $USER",                  
        "sudo systemctl enable docker", 
        "sudo curl -L https://github.com/docker/compose/releases/download/1.27.4/docker-compose-$(uname -s)-$(uname -m) -o /usr/local/bin/docker-compose", 
        "sudo chmod +x /usr/local/bin/docker-compose", 
        "sudo cp /usr/local/bin/docker-compose /usr/bin/", 
        "sudo docker-compose up -d"]
     
    
    }
  ]
}